{
    "id": "org.ekstep.questionset",
    "ver": "1.0",
    "author": "Manoj Chandrashekar",
    "title": "Question Set Plugin",
    "description": "Plugin to add question set to content",
    "publishedDate": "",
    "editor": {
        "main": "editor/plugin.js",
        "help": {
            "src": "editor/help.md",
            "dataType": "text"
        },
        "dependencies": [
            {
                "type": "plugin",
                "plugin": "org.ekstep.question",
                "ver": "1.0"
            }
        ],
        "menu": [
            {
                "id": "question-set",
                "category": "main",
                "type": "icon",
                "toolTip": "Add Question Set",
                "title": "Question Set",
                "iconClass": "fa fa-question",
                "onclick": {
                    "id": "org.ekstep.questionset:showPopup"
                }
            }
        ],
        "configManifest": [{
            "propertyName": "question bank",
            "title": "question Bank",
            "description": "Choose a question from the question bank",
            "dataType": "browser",
            "required": true,
            "onclick":{
                "id": "org.ekstep.questionset:showPopup"
            }
        },
        {
            "propertyName": "allow_skip",
            "title": "Allow skip",
            "description": "Allow to skip the Question",
            "dataType": "boolean",
            "required": true
        },
        {
            "propertyName": "show_feedback",
            "title": "Show Immediate Feedback",
            "description": "Show the feedback popup",
            "dataType": "boolean",
            "required": true
        },
        {
            "propertyName": "shuffle_questions",
            "title": "Shuffle Options",
            "description": "Shuffle the options",
            "dataType": "boolean",            
            "required": true 
        },
        {
            "propertyName": "reattempts",
            "title": "Reattempts",
            "description": "Reattempts number",
            "dataType": "input",
            "valueType":"number",
            "required": true,
            "minimumValue":"0"
        }]
    },
    "renderer": {
        "main": "renderer/plugin.js"
    }
}
