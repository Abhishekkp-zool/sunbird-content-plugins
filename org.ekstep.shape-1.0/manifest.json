{
    "id": "org.ekstep.shape",
    "ver": "1.0",
    "shortId": "shape",
    "author": "Santhosh Vasabhaktula",
    "title": "Shape Plugin",
    "description": "",
    "publishedDate": "",
    "editor": {
        "main": "editor/plugin.js",
        "dependencies": [
            { "type": "plugin", "plugin": "org.ekstep.colorpicker", "ver": "1.0" }
        ],
        "menu": [{
            "id": "shape",
            "category": "main",
            "type": "icon",
            "toolTip": "Add Shapes",
            "title": "Shapes",
            "iconClass": "pie chart icon",
            "submenu": [{
                "id": "rectangle",
                "type": "icon",
                "toolTip": "Add Rectangle",
                "title": "Rectangle",
                "iconClass": "cube icon",
                "onclick": {
                    "id": "org.ekstep.shape:create",
                    "data": {
                        "type": "rect",
                        "x": 10,
                        "y": 20,
                        "fill": "#FFFF00",
                        "w": 14,
                        "h": 25,
                        "opacity": 1,
                        "stroke": "#FFFFFF",
                        "strokeWidth": 1
                    }
                }
            }, {
                "id": "circle",
                "type": "icon",
                "toolTip": "Add Circle",
                "title": "Circle",
                "iconClass": "circle icon",
                "onclick": {
                    "id": "org.ekstep.shape:create",
                    "data": {
                        "type": "ellipse",
                        "x": 15,
                        "y": 15,
                        "fill": "#00FF00",
                        "w": 18,
                        "h": 32,
                        "opacity": 1,
                        "stroke": "#FFFFFF",
                        "strokeWidth": 1
                    }
                }
            }, {
                "id": "rounded-rectangle",
                "type": "icon",
                "toolTip": "Add Rounded Rectangle",
                "title": "Rounded Rectangle",
                "iconClass": "square icon",
                "onclick": {
                    "id": "org.ekstep.shape:create",
                    "data": {
                        "type": "roundrect",
                        "x": 20,
                        "y": 20,
                        "fill": "#FF0000",
                        "w": 14,
                        "h": 25,
                        "radius": 10,
                        "opacity": 1,
                        "stroke": "#FFFFFF",
                        "strokeWidth": 1
                    }
                }
            }]
        }],
        "config": [{
            "propertyName": "color",
            "title": "Fill Color",
            "description": "Choose a color from the color picker",
            "dataType": "colorpicker",
            "required": true,
            "defaultValue": "#000000"
        }, {
            "propertyName": "opacity",
            "title": "Transparency",
            "description": "Set the transparency for element",
            "dataType": "rangeslider",
            "labelSuffix": "%",
            "required": true,
            "defaultValue": 100,
            "minimumValue": 0,
            "maximumValue": 100
        },{
            "propertyName": "stroke",
            "title": "Border Color",
            "description": "Set the border color for element",
            "dataType": "colorpicker",
            "required": true,
            "defaultValue": "#FFFFFF"
        }, {
            "propertyName": "strokeWidth",
            "title": "Border Thickness",
            "description": "Set the border thickness for element",
            "dataType": "rangeslider",
            "required": true,
            "defaultValue": 1,
            "minimumValue": 0,
            "maximumValue": 24
        }],
        "help": {
            "src": "editor/help.md",
            "dataType": "text"
        },
        "init-data": {
            "type": "rect",
            "x": 10,
            "y": 20,
            "fill": "#FFFF00",
            "w": 14,
            "h": 25
        }
    }
}
