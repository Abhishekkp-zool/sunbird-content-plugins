{
    "id": "org.ekstep.shape",
    "ver": "1.0",
    "shortId": "shape",
    "author": "Santhosh Vasabhaktula",
    "title": "Shape Plugin",
    "description": "",
    "publishedDate": "",
    "editor": {
        "main": "editor/plugin.js",
        "dependencies": [
            { "type": "plugin", "plugin": "org.ekstep.colorpicker", "ver": "1.0" }
        ],
        "menu": [{
            "id": "shape",
            "category": "main",
            "type": "image",
            "toolTip": "Add Shapes",
            "title": "Shapes",
            "iconImage": "assets/shapes.png",
            "submenu": [{
                "id": "rectangle",
                "type": "image",
                "toolTip": "Add Rectangle",
                "title": "Rectangle",
                "iconImage": "assets/rectangle.png",
                "onclick": {
                    "id": "org.ekstep.shape:create",
                    "data": {
                        "type": "rect",
                        "x": 10,
                        "y": 20,
                        "fill": "#FFFF00",
                        "w": 14,
                        "h": 25
                    }
                }
            }, {
                "id": "circle",
                "type": "image",
                "toolTip": "Add Circle",
                "title": "Circle",
                "iconImage": "assets/circle.png",
                "onclick": {
                    "id": "org.ekstep.shape:create",
                    "data": {
                        "type": "ellipse",
                        "x": 15,
                        "y": 15,
                        "fill": "#00FF00",
                        "r": 20
                    }
                }
            }, {
                "id": "rounded-rectangle",
                "type": "image",
                "toolTip": "Add Rounded Rectangle",
                "title": "Rounded Rectangle",
                "iconImage": "assets/rounded-rectangle.png",
                "onclick": {
                    "id": "org.ekstep.shape:create",
                    "data": {
                        "type": "roundrect",
                        "x": 20,
                        "y": 20,
                        "fill": "#FF0000",
                        "w": 14,
                        "h": 25,
                        "radius": 10
                    }
                }
            }]
        }],
        "config": [{
            "propertyName": "color",
            "title": "Color",
            "description": "Choose a color from the color picker",
            "dataType": "colorpicker",
            "required": true,
            "defaultValue": "#000000"
        }]
    }
}
