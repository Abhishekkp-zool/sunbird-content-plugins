{
    "id": "org.ekstep.text",
    "ver": "1.0",
    "shortId": "text",
    "author": "Santhosh Vasabhaktula",
    "title": "Text Plugin",
    "description": "",
    "publishedDate": "",
    "editor": {
        "main": "editor/plugin.js",
        "dependencies": [
            { "type": "plugin", "plugin": "org.ekstep.colorpicker", "ver": "1.0" },
            { "type": "js", "src": "editor/texteditor.js" }
        ],
        "menu": [{
            "id": "text",
            "category": "main",
            "type": "icon",
            "toolTip": "Add Text",
            "title": "Text",
            "iconClass": "fa fa-lg fa-text-width fa-inverse menu-icon",
            "onclick": {
                "id": "text:showTextBox",
                "data": {
                    "text": "",
                    "left": 200,
                    "top": 200,
                    "fontFamily": "Arial",
                    "fontSize": "18",
                    "minWidth": 20,
                    "width": 350,
                    "maxWidth": 500
                }
            }
        }],
        "initdata": {
            "props": {
                "text": "",
                "left": 200,
                "top": 200
            }
        },
        "config": [{
            "id": "iconmenu",
            "isDropdown": true,
            "submenu": [{
                "id": "fontweight",
                "type": "icon",
                "toolTip": "Bold",
                "title": "Bold",
                "isDropdown": false,
                "defaultValue": false,
                "iconClass": "fa fa-bold fa-lg",
                "dropdown": [],
                "onclick": {
                    "id": "config:update",
                    "data": {"id": "fontweight"}
                }
            }, {
                "id": "fontstyle",
                "category": "context",
                "type": "icon",
                "toolTip": "Italic",
                "title": "Italic",
                "isDropdown": false,
                "defaultValue": false,
                "iconClass": "fa fa-italic fa-lg",
                "dropdown": [],
                "onclick": {
                    "id": "config:update",
                    "data": {"id":"fontstyle"}
                }
            }],
            "onclick": {
                "id": "",
                "data": {}
            }
        }, {
            "id": "colorpicker",
            "type": "colorpicker",
            "toolTip": "Change Color",
            "title": "Color",
            "isDropdown": false,
            "iconClass": "jscolor",
            "iconStyle": "width:20px;height:20px;",
            "onclick": {
                "id": "colorpicker:show",
                "data": {}
            }
        }, {
            "id": "fontfamily",
            "category": "context",
            "type": "select",
            "toolTip": "Font Family",
            "title": "Font Family",
            "isDropdown": false,
            "defaultValue": "Arial",
            "options": [
                "Arial",
                "Courier",
                "Georgia",
                "Helvetica",
                "Monospace",
                "Sans-serif",
                "Serif",
                "Tahoma",
                "Times",
                "Trebuchet MS",
                "Verdana",
                "NotoSansKannada",
                "NotoSansGujarati",
                "NotoSansBengali",
                "NotoSansGurmukhi",
                "NotoSansOriya",
                "NotoSansDevanagari",
                "NotoSansTamil",
                "NotoSansTelugu",
                "NotoNastaliqUrdu",
                "NotoSansMalayalam"
            ],
            "onchange": {
                "id": "config:update",
                "data": { "id": "fontfamily" }
            }
        }, {
            "id": "fontsize",
            "type": "select",
            "toolTip": "Font Size",
            "title": "Font Size",
            "isDropdown": false,
            "defaultValue": 18,
            "options": [18, 20, 22, 24, 26, 28, 32, 36, 40, 44, 48, 54, 60, 66, 72, 80, 88, 96],
            "onchange": {
                "id": "config:update",
                "data": { "id": "fontsize" }
            }
        }]
    }

}
